@using Abp.Web.Mvc.Extensions
@{
    ViewBag.CurrentPageName = "ModelManager";
}
<div class="row margin-buttom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>模型</span><small>@L("ModelManager")</small>
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="protlet light">
    <div class="col-md-12">
        <table id="easyui-datagrid" class="easyui-datagrid" data-options="
               method: 'post',
               url:'/api/services/app/model/GetModels',
               pagination: true,
               rownumbers:true,
               pageSize: 20,
               sortName:'LastModificationTime',
               sortOrder:'desc',
               singleSelect:true
               ">
            <thead>
                <tr>
                    <th data-options="field:'id',width:100,sortable: true">ID</th>
                    <th data-options="field:'modelName',width:300,sortable: true">模型名称</th>
                    <th data-options="field:'description',width:300,sortable: true">模型描述</th>
                    <th data-options="field:'unit',width:300,sortable: true">单位</th>
                    <th data-options="field:'tableName',width:300,sortable: true">关联表名</th>
                    <th data-options="field:'isCountHits',width:300,sortable: true">是否记录点击次数</th>
                    <th data-options="field:'lastModificationTime',width:300,sortable: true">最后修改时间</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
