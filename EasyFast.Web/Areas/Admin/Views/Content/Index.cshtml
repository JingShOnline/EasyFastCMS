@using Abp.Web.Mvc.Extensions
@{
    ViewBag.CurrentPageName = "ContentManager";
}

<div class="row margin-buttom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>内容</span><small>@L("ContentManager")</small>
                </h1>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <ul id="tree"></ul>
        <div id="menuBlur" class="easyui-menu" style="width: 120px; display:none">
            <div onclick="addContent()" iconcls="icon-add">
                添加内容
            </div>
        </div>
    </div>
    <div class="col-md-10">
        <button class="btn default" onclick="bulkDelete()">删除选中的内容</button>
        <div class="input-group">
            <input id="filter" type="text" class="form-control" placeholder="请输入搜索关键词">
            <span class="input-group-btn">
                <button class="btn default" onclick="doSearch()"><i class="icon-magnifier"></i></button>
            </span>
        </div>
        <table id="easyui-datagrid" class="easyui-datagrid" data-options="
               url:'/api/services/app/content/GetGridContents',
               method: 'post',
               pagination: true,
               pageSize: 20,
               sortName:'CreationTime',
               sortOrder:'desc',
               rownumbers:true
               ">
            <thead>
            <tr>
                <th data-options="field:'ck',checkbox:true"></th>
                <th data-options="field:'title',width:300,sortable: true">标题</th>
                <th data-options="field:'columnName',width:150">所属栏目</th>
                <th data-options="field:'modelRecordModelName',width:150">所属模型</th>
                <th data-options="field:'hits',width:50,sortable: true">点击量</th>
                <th data-options="field:'creationTime',width:200,sortable: true">发布时间</th>
                <th data-options="field:'lastModificationTime',width:200,sortable: true">最后修改时间</th>
                <th data-options="field:'action',width:300,align:'center',formatter:formatOper"></th>
            </tr>
            </thead>
        </table>
    </div>
</div>
@Html.IncludeScript("/Areas/Admin/Views/Content/index.js")
