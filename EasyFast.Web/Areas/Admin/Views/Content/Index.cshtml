@using Abp.Web.Mvc.Extensions
@Html.IncludeScript("~/Scripts/jquery-2.2.0.min.js")
@Html.IncludeScript("/Areas/Admin/Views/Content/index.js")


<ul id="tree"></ul>
<div id="mm" class="easyui-menu" style="width: 120px;">
    <div onclick="append()" iconcls="icon-add">
        添加内容
    </div>
</div>

<div class="row margin-buttom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>内容</span><small>@L("ContentManager")</small>
                </h1>
            </div>
        </div>
    </div>
</div>

<div class="protlet light">
    <div class="portlet-title portle-title-filter">
        <div class="inputs inputs-full-width">
            <div class="portlet-input">
                <form>
                    <div class="input-group">
                        <input id="contentFilter" class="form-control" placeholder="请输入搜索关键词"
                               type="text" />
                        <span class="input-group-btn">
                            <button id="GetContentButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br />
    <div class="portlet-body">
        <div>
            <div id="contentTable"></div>
        </div>
    </div>
</div>