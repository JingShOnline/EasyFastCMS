@model EasyFast.Application.Article.Dto.ArticleDto
@using Abp.Web.Mvc.Extensions
<div class="form-group">
    <label class="control-label col-md-2">二级标题</label>
    <div class="col-md-10">
        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-folder-o"></i>
            </span>
            
            @Html.TextAreaFor(model => model.ShortTitle, new { @class = "form-control", rows = "5", placeholder = "请输入二级标题" })
        </div>
        @Html.ValidationMessageFor(model => model.ShortTitle, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">完整标题</label>
    <div class="col-md-10">
        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-folder-o"></i>
            </span>
            @Html.TextAreaFor(model => model.FullTitle, new { @class = "form-control", rows = "5", placeholder = "请输入完整标题" })
        </div>
        @Html.ValidationMessageFor(model => model.FullTitle, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">请输入文章内容</label>
    <div class="col-md-10">
        <textarea id="content" name="content" style="height:400px;max-height:500px;">
        <p>@Html.Raw(Model.Content)</p>
        </textarea>
    </div>
</div>

@Html.IncludeScript("/Areas/Admin/Views/Article/addOrEdit.js");

