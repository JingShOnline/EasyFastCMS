@using Abp.Web.Mvc.Extensions
@{
    ViewBag.Title = "内容管理";
}

<div class="row margin-buttom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>模型</span><small>@L("ContentManager")</small>
                </h1>
            </div>
        </div>      
    </div>
    <div class="col-xs-6 text-right">
        <button id="CreateNewContentButton" class="btn btn-primary blue"><i class="fa fa-plus"></i>添加内容</button>
    </div>
</div>
<div class="protlet light">
    <div class="portlet-title portle-title-filter">
        <div class="inputs inputs-full-width">
            <div class="portlet-input">
                <form>
                    <div class="input-group">
                        <input id="ContentTableFilter" class="form-control" placeholder="请输入搜索关键词"
                               type="text" value="@ViewBag.FilterTest" />
                        <span class="input-group-btn">
                            <button id="GetContentButton" class="btn default" type="submit"><i class="icon-magnifier"></i></button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br />
    <div class="portlet-body">
        <div>
            <div id="ContentTable"></div>
        </div>
    </div>
</div>

@Html.IncludeScript("/Areas/Admin/Views/ContentManager/index.js")